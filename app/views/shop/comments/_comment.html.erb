<table>

  <% posts.comments.each do |comment| %>
  <tr>
    <td>
      <%= attachment_image_tag comment.manufacurer, :manufacurer_icon, format: 'jpeg',size: "50x50",fallback: "no_image.jpg" %><br>
      <%=link_to shop_manufacurer_path(posts.manufacurer.id) do %>
        <%= comment.manufacurer.name %>
      <% end %>
    </td>

    <td>
      <%= comment.comment %>
    </td>

    <% if comment.manufacurer == current_manufacturer %>
      <td>
        <%= link_to "削除", shop_post_comment_path(comment.post, comment), method: :delete,remote: true,class:"btn btn-danger" %>
      </td>
    <% end %>
  </tr>
  <% end %>

</table>

<div class="form-group">
  <label for="newcomment">コメントする</label>

  <%= form_with(model:[posts, comment], local: true) do |f| %>
    <%= f.text_area :comment, rows:'5',placeholder: "コメントを入力",class:"form-control" %>
    <%= f.submit "送信する" %>
  <% end %>
</div>
