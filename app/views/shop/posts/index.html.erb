<div class="container px-5 px-sm-0">

  <div class="col-md-2">
    <div class="lead font-weight-bold">投稿一覧</div>
  </div>

  <div class="new">
    <%= link_to new_shop_post_path do %>
      <button type="button" class="btn btn-primary rounded-circle p-0" style="width:2rem;height:2rem;">＋</button>
    <% end %>
  </div>

  <div class="row">
    <% @posts.each do |post| %>
      <div class="card mb-3" style="max-width: 840px;">

        <%= link_to shop_post_path(post.id) do %>
          <div class="row g-0">
            <div class="col-md-5">
              <div class="post_image_index">
                <%= image_tag post.post_image, class: "post_image_index" %>
              </div>
            </div>
            <div class="col-md-7">
              <div class="card-body">
                <p class="card-text">
                  <%= post.introduction %>
                </p>
                <p class="card-text"><small class="text-muted"><%= post.created_at.strftime('%Y/%m/%d %H:%M') %></small></p>
              </div>
            </div>
          </div>
        <% end %>

      </div>
    <% end %>

  </div>
</div>