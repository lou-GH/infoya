<div class="container px-5 px-sm-0">
  <div class="align-items-center">
    <div class="justify-content-center">

      <h2>新規生産者登録</h2>

       <%= form_with model: @manufacturer, url: manufacturer_registration_path, local: true do |f| %>
        <%= render "shop/shared/error_messages", resource: resource %>

        <div class="field col-md-4">
          <p>アカウント名</p>
          <%= f.text_field :account_name, autofocus: true, id:"inputAccountName",　placeholder: "アカウント名" %>
        </div>

        <div class="field col-md-4">
          <p>メールアドレス</p>
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field col-md-4">
          <p>都道府県</p>
          <%= f.collection_select :prefecture, JpPrefecture::Prefecture.all, :name, :name, { include_blank: '都道府県' }, { class: 'form-control' }  %>
        </div>

        <div class="field col-md-4">
          <p>パスワード(6文字以上)</p>
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field col-md-4">
          <p>パスワード(確認用)</p>
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

<br>
        <div class="actions">
          <button type="submit" class="btn btn-success">新規登録</button>
        </div>
      <% end %>

<br>
      <h5>※既に登録済みの方</h5>
        <%= link_to new_manufacturer_session_path do %>
          こちら
        <% end %>
        からログインしてください。
<br>
    </div>
  </div>
</div>

