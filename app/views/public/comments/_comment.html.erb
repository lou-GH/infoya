<div class="form-group">
  <label for="newcomment">コメントする</label>

  <%= form_with(url: public_post_comment_path(@post), method: :patch, local: true) do |f| %>
    <%= f.text_area :comment, rows:'5',placeholder: "コメントを入力",class:"form-control" %>
    <%= f.submit "送信する" %>
  <% end %>
</div>

コメント
<table>

  <% post.comments.each do |comment| %>
  <tr>
    <td>
      <%= attachment_image_tag comment.user, :user_icon, format: 'jpeg',size: "50x50",fallback: "no_image.jpg" %><br>
      <%=link_to public_manufacurer_path(posts.manufacurer.id) do %>
        <%= comment.manufacurer.name %>
      <% end %>
    </td>

    <td>
      <%= comment.comment %>
    </td>

    <% if comment.user == user %>
      <td>
        <%= link_to "削除", public_post_comment_path(comment.post, comment), method: :delete,remote: true,class:"btn btn-danger" %>
      </td>
    <% end %>
  </tr>
  <% end %>

</table>


