<div class="container px-5 px-sm-0">
  <h2>マイページ</h2>

  <div class="row">

    <div class="col-md-2">
      <div class="lead font-weight-bold">ユーザー登録情報</div>
    </div>

    <div class="col-md-3">
      <%= link_to public_users_information_edit_path do %>
        <button type="button" class="btn btn-success">編集する</button>
      <% end %>
    </div>
  </div>

  <div class="my-3">
    <div class="d-block d-md-flex">
      <div class="mr-5">
        <% if current_user.user_icon.attached? %>
          <%= imgae_tag current_user.user_icon %>
        <% else %>
          <%= image_tag 'no_image.jpg', class: 'profile-manufacturer_icon-img' %>
        <% end %>
      </div>
      <div>
        <h4><%= current_user.account_name %></h4>
        <small class="text-black-50">
          <%= current_user.email %>
        </small>
      </div>
    </div>

    <% if current_user.introduction.present? %>
      <hr>
      <%= simple_format(current_user.introduction) %>
      <hr>
    <% end %>
  </div>


  <div class="mb-3">
    <h5>
      都道府県 : <%= current_user.prefecture.blank? ? '未登録' : current_user.prefecture %>
    </h5>
  </div>

</div>