<div class="container px-5 px-sm-0">
  <%= render 'search', q: @search, url: public_manufacturers_path %>

  <div class="row">
    <div class="col-md-8 offset-md-1">
      <h1>生産者一覧</h1>

      <ul class="manufacturers">
        <table class = "table">
          <thead>
            <tr>
              <th></th>
              <th></th>
              <th></th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <% @manufacturers.each do |manufacturer| %>
          <tbody>
            <tr>
              <td>
                <% if manufacturer.manufacturer_icon.attached? %>
                  <%= imgae_tag manufacturer.manufacturer_icon %>
                <% else %>
                  <%= image_tag 'no_image.jpg', class: 'profile-manufacturer_icon-img' %>
                <% end %>
              </td>
              <td><%= manufacturer.account_name %></td>
              <td><%= manufacturer.prefecture %></td>
              <td><%= link_to "詳細", public_manufacturer_path(manufacturer) %></td>
            </tr>
          </tbody>
          <% end %>

        </table>
      </ul>
    </div>
  </div>
</div>