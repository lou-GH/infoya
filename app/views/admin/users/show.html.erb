<div class="container px-5 px-sm-0">
  <h2>ユーザーの詳細</h2>

  <div class="row">

    <div class="col-md-2">
      <div class="lead font-weight-bold">ユーザー登録情報</div>
    </div>

  </div>

  <div class="my-3">
    <div class="d-block d-md-flex">
      <div class="mr-5">
        <% if @user.user_icon.attached? %>
          <%= image_tag @user.user_icon, class: 'profile-icon-img' %>
        <% else %>
          <%= image_tag 'no_image.jpg', class: 'profile-icon-img' %>
        <% end %>
      </div>
      <div>
        <h4><%= @user.account_name %></h4>
        <small class="text-black-50">
          <%= @user.email %>
        </small>
      </div>
    </div>

    <% if @user.introduction.present? %>
      <hr>
      <%= simple_format(@user.introduction) %>
      <hr>
    <% end %>
  </div>


  <div class="mb-3">
    <h5>
      都道府県 : <%= @user.prefecture.blank? ? '未登録' : @user.prefecture %>
    </h5>
  </div>

 <div class="mb-3">
    <h5>
      ステータス : <%= @user.user_status %>
    </h5>
  </div>

  <% if @user.is_deleted %>
    <button type="button" class="btn btn-outline-danger">退会済み</button>
  <% else %>
    <%= link_to admin_user_user_path, method: :patch, data: { confirm: "本当に退会させますか？" } do %>
      <button type="button" class="btn btn-danger">退会させる</button>
    <% end %>
  <% end %>

</div>