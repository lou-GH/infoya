<div class="container px-5 px-sm-0">
  <div class="row">

    <div class="col-md-2">
      <div class="lead font-weight-bold">投稿詳細</div>
    </div>
  </div>

  <div class="row">

    <div class="col-xs-11 col-lg-5">
      <%= image_tag @post.post_image, class:'post_image_show' %>
    </div>
    <div class="col-xs-11 col-lg-5">
      <%= @post.created_at.strftime('%Y/%m/%d %H:%M') %><br>
      <br>
      <%= link_to public_manufacturer_path(@post.manufacturer) do %>
        <% if @post.manufacturer.manufacturer_icon.attached? %>
          <%= image_tag @post.manufacturer.manufacturer_icon, class:'index-icon-img' %>
        <% else %>
          <%= image_tag 'no_image.jpg', class: 'index-icon-img' %>
        <% end %>
        <%= @post.manufacturer.account_name %><br>
      <% end %>
      <%= @post.introduction %><br>
<br>
      登録地：<%= @post.location.name %><br>

      タ　グ：
      <% @post_genres.each do |genre| %>
        <%= genre.genre_name %>
      <% end %>

      <br>

      <%= link_to "削除",admin_post_path(@post),method: :delete, data: { confirm: "本当に投稿を削除しますか？" },class:'btn btn-danger' %>

      <br>

      コメント数：<%= @post.comments.count %><br>


    </div>

      <div id="comments-area"><%= render "admin/comments/comment",post: @post,comment: @comment %></div>

    </div>
  </div>

  <%= link_to '投稿一覧', admin_posts_path %>

</div>